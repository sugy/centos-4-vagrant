{
  "builders": [
    {
      "vm_name": "centos4.8-x86_64",
      "guest_os_type": "RedHat_64",
      "iso_checksum_type": "md5",
      "iso_checksum": "247fccae822e51fef2cff4ed9efbda24",
      "iso_url": "http://archive.kernel.org/centos-vault/4.8/isos/x86_64/CentOS-4.8-x86_64-bin1of5.iso",
      "type": "virtualbox-iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "50000s",
      "headless": "true",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "2"    ]
      ],
      "http_directory": ".",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/package.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "centos4.8-x86_64.box"
    }
  ]
}
